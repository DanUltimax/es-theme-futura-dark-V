<theme>

    <formatVersion>3</formatVersion>
    <include>./../futura.xml</include>

    <view name="system, basic, detailed, video">
        <image name="logo">
            <path>./system.svg</path>
        </image>
    </view>
	
<!-- SYSTEM VIEW START //-->	
	<view name="system">
		<text name="system_description" extra="true">
			<text>The Nintendo Wii U was released in 2012. The Wii U is regarded as one of the worse consoles Nintendo has made, people mainly complained about the odd naming and the Wii U Gamepad and its gimmick.</text>
		</text>	
<!-- screenshot left //-->		
		<image name="screenshot_left" extra="true">
			<path>./screenshot_left.png</path>			
		</image>
<!-- screenshot center //-->
		<image name="screenshot_center" extra="true">
			<path>./screenshot_center.png</path>
		</image>	
<!-- screenshot right //-->			
		<image name="screenshot_right" extra="true">
			<path>./screenshot_right.png</path>
		</image>
	</view>
	
<!-- BASIC VIEW START //-->	
	<view name="basic">
		<text name="system_name" extra="true">
			<text>Wii U</text>
			<pos>0.03 0.08</pos>					
		</text>		
		<text name="system_year" extra="true">
			<text>2012 - 2017</text>
		</text>	
	</view>
	
<!-- DETAILED VIEW START //-->	
	<view name="detailed, video">
		<image name="logo">
			<pos>0.11 0.055</pos>
		</image>		
		<text name="system_name_year" extra="true">
			<text>Wii U 2012 - 2017</text>			
		</text>				
	</view>		

</theme>